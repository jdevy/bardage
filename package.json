{
  "name": "bardage",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "build:docs": "ng build --prod --output-path docs --base-href bardage && cp docs/index.html docs/404.html",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "packagr": "ng-packagr -p src/lib/package.json && cp README.md src/lib/dist/",
    "commitmsg": "validate-commit-msg"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/build-angular": "~0.10.4",
    "@angular-devkit/core": "7.0.4",
    "@angular/animations": "7.0.2",
    "@angular/cdk": "^7.0.2",
    "@angular/cli": "^7.0.4",
    "@angular/common": "7.0.2",
    "@angular/compiler": "7.0.2",
    "@angular/compiler-cli": "7.0.2",
    "@angular/core": "7.0.2",
    "@angular/forms": "7.0.2",
    "@angular/language-service": "7.0.2",
    "@angular/material": "^7.0.2",
    "@angular/platform-browser": "7.0.2",
    "@angular/platform-browser-dynamic": "7.0.2",
    "@angular/pwa": "^0.10.4",
    "@angular/router": "7.0.2",
    "@angular/service-worker": "7.0.2",
    "@types/node": "^10.12.2",
    "codelyzer": "^4.5.0",
    "conventional-changelog": "^3.0.5",
    "core-js": "^2.5.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "rxjs": "6.3.3",
    "rxjs-compat": "^6.3.3",
    "typescript": "3.1.6",
    "uglify-es": "3.3.9",
    "validate-commit-msg": "^2.14.0",
    "zone.js": "^0.8.26"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "ci",
        "build"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.4.0",
    "protractor": "~5.1.2",
    "@types/jasmine": "~2.6.0",
    "@types/jasminewd2": "~2.0.2",
    "ts-node": "~3.3.0",
    "tslint": "~5.9.1"
  }
}
